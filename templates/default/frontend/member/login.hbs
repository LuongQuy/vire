<div class="row" style="margin: 90px 0 90px 0">
    <form action="/member/login" method="POST" class="form-horizontal col-sm-12" role="form">
        {{!--
        <div class="form-group">
            <legend>{{__ 'Member Login'}}
                <span class="pull-right">
                    <a href="/member/register">{{__ 'Create new account'}}</a>
                </span>
            </legend>
        </div> --}} {{#if hasErrors}}
        <div class="">
            <div class="alert alert-danger">
                {{#each messages}}
                <p>{{this}}</p>
                {{/each}}
            </div>
        </div>
        {{/if}}

        <div class="form-group">
            <div class="row">
                <div class="col-sm-6">
                    <button onclick="window.location.href='/member/facebook'" type="button" class="btn-fb btn btn-default col-sm-12">{{__ 'Login by Facebook'}}</button>
                </div>
                <div class="col-sm-6">
                    <button onclick="window.location.href='/member/google'" type="button" class="btn-gg btn btn-default col-sm-12">{{__ 'Login by Google'}}</button>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="text-center col-sm-12">{{__ 'OR'}}</div>
        </div>

        <div class="form-group">
            <label for="email">{{__ 'Email Address'}}</label>
            <input type="text" name="email" class="form-control" id="email" placeholder="{{__ 'Please input your email address'}}">
        </div>

        <div class="form-group">
            <label for="password">{{__ 'Password'}}</label>
            <input type="password" name="password" class="form-control" id="password" placeholder="{{__ 'Please input password'}}">
        </div>

        <div class="form-group">
            <div class="checkbox">
                <input type="hidden" name="_csrf" value="{{csrfToken}}">
                <button id="btnLoginSubmit" type="submit" class="btn btn-primary pull-right">{{__ 'Login'}}</button>
            </div>
        </div>
    </form>
</div>